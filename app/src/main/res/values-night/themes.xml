<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OQueFazer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/primary_black_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/primary_black_theme</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="textColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonTextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backgroundItem">
        <item name="android:background">@color/primary_black_theme</item>
    </style>

    <style name="backgroundItemSelected">
        <item name="android:background">@color/secondary_black_theme_selectedItem</item>
    </style>

</resources>